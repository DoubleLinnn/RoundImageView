<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <!-- Border width -->
        <attr name="borderWidth" format="dimension" />
        <!-- Border color -->
        <attr name="borderColor" format="color" />
        <!-- Whether to show the border line -->
        <attr name="displayBorder" format="boolean" />
        <!-- The radius of the round corner USES this property first -->
        <attr name="radius" format="dimension" />
        <!-- Upper left corner radius -->
        <attr name="leftTopRadius" format="dimension" />
        <!-- The radius of the arc in the upper right corner -->
        <attr name="rightTopRadius" format="dimension" />
        <!-- The radius of the arc in the lower left corner -->
        <attr name="leftBottomRadius" format="dimension" />
        <!-- The radius of the arc in the lower right corner -->
        <attr name="rightBottomRadius" format="dimension" />
        <!-- Display Type -->
        <attr name="displayType" format="enum">
            <!-- Rectangle -->
            <enum name="normal" value="0" />
            <!-- circle -->
            <enum name="circle" value="1" />
            <!-- Rounded Rectangle -->
            <enum name="round_rect" value="2" />
        </attr>
        <!--Display lables-->
        <attr name="displayLable" format="boolean" />
        <!--The lable text-->
        <attr name="text" />
        <!--The lable background-->
        <attr name="lableBackground" format="color" />
        <!--The lable text color-->
        <attr name="textColor" />
        <!--The lable width-->
        <attr name="lableWidth" format="dimension" />
        <!--The lable text size-->
        <attr name="textSize" />
        <!--Distance start location margin-->
        <attr name="startMargin" format="dimension" />
        <!--The lable typeface(normal, sans, serif, monospace)-->
        <attr name="typeface" />
        <!-- Style (bold, italic, bolditalic) for the text. -->
        <attr name="textStyle" />
        <!--Label display location-->
        <attr name="lableGravity" format="enum">
            <enum name="leftTop" value="0" />
            <enum name="leftBottom" value="1" />
            <enum name="rightTop" value="2" />
            <enum name="rightBottom" value="3" />
        </attr>
    </declare-styleable>
</resources>
